{% extends "@Merchant/Default/index.html.twig" %}
{% block body %}
<h2>Added Products</h2>
<div class="container" align="center" padding="50px 30px 50px 80px">
      <table style="border: 2px solid black;text-align:center;">
      <tr>
        <th>IMEI NO</th>
        <th>Product Name</th>
         <th>Price</th> 
        <th>Coupon</th>
        <th>Category</th>
        <th>Brand</th>
        <th>Color</th>
        <th>RAM</th>
        <th >Description</th>
        <th rowspan=2><a href="{{ path('update') }}">Update</a></th>
      </tr>
      <tr>
       <td>{{ imei.productIMEI }}</td>
       <td> {{ product.productName }}</td>
         <td> {{ product.productPrice }}</td>
        <td>{{product.coupon}}</td>   
        <td>{{ cat.categoryName }}</td>
        <td>{{ brand.brandName }}</td>
        <td>{{ descp.color }}</td>
        <td>{{ descp.ramSize }}</td>
        <td> {{ descp.productCompleteInfo }}</td>
      </tr>
    
    </table> 
</div>

{% endblock %}

