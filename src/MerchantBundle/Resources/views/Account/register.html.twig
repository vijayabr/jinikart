{% extends "@Merchant/Default/index.html.twig" %}
{% block body %}
    <div class=" main" align="center">
        <h2>Merchant Signup</h2>
    </div> 
         <div align="left">
         {% if errors  %}
               <ul>
                   {%for er in errors  %}
                    <li>
                       {{ er.message }}
                    </li>
                   {% endfor %}
               </ul>
           {% endif %}
           {% if error1 %}
               <ul>
                {% for er1 in error1 %}
                    <li>
                    {{ er1.message }}

                    </li>
                {% endfor %}
               </ul>
           {% endif %}

           {% if message %}
                {{ message }}
               {{ "check your email-id or mobile number "}}
            {% endif %}

          </div>  
    <div class="container" style="padding:50px 15px 15px 30px;margin-left:35%">

            {{ form_start(form)}}
            {{ form_row(form.companyName)}}
            {{ form_row(form.contactPersonName)}}
            {{ form_row(form.email, {'attr': {'id':'email'}} )}}
            {{ form_row(form.mobileNo, {'attr': {'id':'mobile'}})}}
            {{ form_row(form.password )}}
            {{ form_row(form.address_line1) }}
            {{ form_row(form.address_line2) }}
            {{ form_row(form.pincode) }}
            {{ form_row(form.state ,{ 'attr':{'class': 'drop-down'}}) }}
            {{ form_row(form.country ,{'attr':{'class': 'drop-down'}}) }}
            <br/>
            {{ form_row(form.companylogo,{ 'attr':{'class': 'drop-down'}}) }}
          
            <div id="buttons" padding="10em">
           <p><button type="submit" style="width:80px" class="btn btn-log btn-primary">Register</button>
           <button type="reset" style="width:80px" class="btn btn-log btn-primary">Clear</button><br/></p>
            </div>
           {{ form_end(form)}}
            <a href="{{ path('merchant_login') }}">Already have an account? SignIn!!</a>
    </div>
     
        
  <script>
  $(document).ready(function(){
		$("button").onclick(function(){
			$("#email").click(){
				alert("Email should contain @")
	        }
		});
		$("button").onclick(function(){
			$("#mobile").click(){
				alert("Mobile should contain 10 digits")
	        }
		});
	});
  </script>
  <script src="https://cdn.jsdelivr.net/jquery/1.12.4/jquery.min.js"></script>
      <script src="vendor/jquery-validation/dist/jquery.validate.min.js"></script>
{% endblock %}